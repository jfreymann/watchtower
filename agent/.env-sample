# Where the agent sends Login events
WATCHTOWER_COLLECTOR_URL=https://watchtower.local:443/login

# Must match the current token from the watchtower/collector
WATCHTOWER_TOKEN=CHANGE_ME_AGENT_TOKEN

# Optional per-host metadata
WATCHTOWER_REGION=us-east
WATCHTOWER_HOST_GROUP=prod-api
WATCHTOWER_SEVERITY=info
WATCHTOWER_FLAGGED=false
WATCHTOWER_VERIFY_TLS=true
WATCHTOWER_SSH_UNIT=ssh.service

# Setting the logging severity level (e.g., DEBUG, INFO, WARNING, ERROR, CRITICAL)
WATCHTOWER_LOG_LEVEL=ERROR