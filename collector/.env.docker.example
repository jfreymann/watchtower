# Watchtower Collector Docker Environment Configuration
# Copy this file to .env and update with your values

# Admin API Key for /events, /admin APIs
ADMIN_API_KEY=your-admin-key-here

# Token for Watchtower Agent authentication
LOGIN_ALERT_TOKEN=your-agent-token-here

# Optional webhook for critical events
SLACK_WEBHOOK_URL=

# Domain/hostname for Caddy
WATCHTOWER_DOMAIN=watchtower.local

# Admin IP whitelist (CIDR notation, comma-separated)
ADMIN_IP=192.168.1.0/24

# Custom ports (optional)
HTTPS_PORT=443
HTTP_PORT=80
